FROM node:20-bullseye

# Install system dependencies
RUN apt-get update && \
    apt-get install -y ffmpeg python3 python3-pip curl && \
    pip3 install --no-cache-dir yt-dlp && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# App directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install node dependencies
RUN npm install

# Copy app source
COPY . .

# Expose Render port
EXPOSE 10000

# Start server
CMD ["node", "server.js"]

